---
import Layout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm.astro";
import Footer from "../components/Footer.astro";

// Portfolio data - your actual projects
const projects = [
	{
		title: "Homelab Kubernetes",
		link: "https://github.com/yamshy/homelab",
		description:
			"Personal homelab infrastructure using Kubernetes with FluxCD for GitOps deployment. Manages various services and applications with automated CI/CD pipelines.",
		technologies: ["Kubernetes", "FluxCD", "GitOps", "Docker", "Helm"],
	},
	{
		title: "Portfolio Website",
		link: "https://github.com/yamshy/portfolio",
		description:
			"Portfolio website built with Astro and Tailwind CSS.<br>(the site you're looking at)",
		technologies: [
			"Astro",
			"Tailwind CSS",
			"TypeScript",
			"Responsive Design",
		],
	},
];
---

<Layout>
	<!-- Hero Section -->
	<section id="hero">
		<div>
			<!-- Main heading -->
			<div>
				<h1>
					<span>Shyam</span>
					<span>Ajudia</span>
				</h1>
			</div>

			<!-- Bio text -->
			<div>
				<p>
					Infrastructure Engineer specializing in
					<span>DevOps, system administration,</span>
					and <span>data engineering</span>
				</p>
				<p>
					Starting in molecular biology research, the transition
					to infrastructure engineering came naturally through
					understanding how biological systems work - complex,
					interconnected, and self-regulating. This systems
					thinking translates directly to building reliable
					infrastructure and data pipelines.
				</p>
			</div>
		</div>

		<!-- CTAs -->
		<div>
			<a href="#projects">
				Learn More
				<span>↓</span>
			</a>
			<a href="mailto:sajudia@proton.me">
				Get In Touch
				<span>→</span>
			</a>
		</div>

		<!-- Scroll indicator -->
		<div>
			<div></div>
		</div>
	</section>

	<!-- Professional Evolution Timeline -->
	<section id="evolution">
		<div>
			<!-- Section header -->
			<div>
				<h2>
					Professional <span>Evolution</span>
				</h2>
				<p>
					From molecular biology research to cloud architecture - a
					journey of applying analytical thinking and systematic
					approaches to increasingly complex technical challenges
				</p>
			</div>

			<!-- Timeline container -->
			<div>
				<!-- Timeline phases -->
				<div>
					<!-- Phase 1: Biology Research Associate -->
					<div>
						<div>
							<div>
								<span>2019-2021</span>
							</div>
							<h3>Biology Research Associate</h3>
							<p>
								Began as a molecular and cellular biology
								research associate, conducting bench work,
								experimental design, and data analysis.
								Built the foundation of analytical precision
								and systematic problem-solving that would
								later define my technical approach.
							</p>
							<div>
								<span>Molecular Biology</span>
								<span>Bench Work</span>
								<span>Research</span>
							</div>
						</div>
					</div>

					<!-- Phase 2: Computational Integration -->
					<div>
						<div>
							<div>
								<span>2021-2022</span>
							</div>
							<h3>Computational Integration</h3>
							<p>
								Recognized inefficiencies in manual
								processes and began applying programming to
								biological workflows. This natural
								progression from data analysis to automation
								marked the beginning of my technical
								evolution.
							</p>
							<div>
								<span>Automation</span>
								<span>Programming</span>
								<span>Workflows</span>
							</div>
						</div>
					</div>

					<!-- Phase 3: Technical Leadership -->
					<div>
						<div>
							<div>
								<span>2022-2024</span>
							</div>
							<h3>Technical Leadership</h3>
							<p>
								Transitioned into technical leadership,
								managing infrastructure, bioinformatics
								pipelines, and internal web development.
								This role uniquely positioned me to bridge
								domain expertise with technical
								implementation, creating solutions that
								truly served the research needs.
							</p>
							<div>
								<span>Infrastructure</span>
								<span>Bioinformatics</span>
								<span>Web Development</span>
							</div>
						</div>
					</div>

					<!-- Phase 4: Current Evolution -->
					<div>
						<div>
							<div>
								<span>2024+</span>
								<span>Current</span>
							</div>
							<h3>Infrastructure & Data Engineering</h3>
							<p>
								Now specializing across DevOps, system
								administration, and data engineering,
								applying the same analytical precision from
								laboratory research to building scalable
								infrastructure, managing systems, and
								designing data pipelines.
							</p>
							<div>
								<span>DevOps</span>
								<span>System Admin</span>
								<span>Data Engineering</span>
								<span>Infrastructure</span>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Featured Work Section -->
	<section id="projects">
		<div>
			<!-- Section header -->
			<div>
				<h2>
					Featured <span>Work</span>
				</h2>
				<p>
					Infrastructure projects and technical solutions built with
					precision and scalability in mind
				</p>
			</div>

			<!-- Project grid -->
			<div>
				<!-- Featured Project - Large -->
				<div>
					<div>
						<div>
							<h3>{projects[0].title}</h3>
							<a
								href={projects[0].link}
								target="_blank"
								rel="noopener noreferrer"
							>
								<span>→</span>
							</a>
						</div>
						<p set:html={projects[0].description} />
						<div>
							{
								projects[0].technologies.map((tech) => (
									<span>{tech}</span>
								))
							}
						</div>
					</div>
				</div>

				<!-- Secondary Project - Medium -->
				<div>
					<div>
						<div>
							<h3>{projects[1].title}</h3>
							<a
								href={projects[1].link}
								target="_blank"
								rel="noopener noreferrer"
							>
								<span>→</span>
							</a>
						</div>
						<p set:html={projects[1].description} />
						<div>
							{
								projects[1].technologies.map((tech) => (
									<span>{tech}</span>
								))
							}
						</div>
					</div>
				</div>

				<!-- Additional space for future projects -->
				<div>
					<div>
						<div>
							<span>+</span>
						</div>
						<p>More projects coming soon</p>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Form -->
	<ContactForm />

	<!-- Footer -->
	<Footer />
</Layout>