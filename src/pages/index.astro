---
import Layout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";

// Portfolio data - your actual projects
const projects = [
	{
		title: "Homelab Kubernetes",
		image: "/homelab-thumbnail.jpg",
		link: "https://github.com/yamshy/homelab",
		description:
			"Personal homelab infrastructure using Kubernetes with FluxCD for GitOps deployment. Manages various services and applications with automated CI/CD pipelines.",
		technologies: ["Kubernetes", "FluxCD", "GitOps", "Docker", "Helm"],
	},
	{
		title: "Portfolio Website",
		image: "/portfolio-thumbnail.jpg",
		link: "https://github.com/yamshy/portfolio",
		description:
			"Portfolio website built with Astro and Tailwind CSS.<br>(the site you're looking at)",
		technologies: ["Astro", "Tailwind CSS", "TypeScript", "Responsive Design"],
	},
];
---

<Layout>
	<!-- Hero Section -->
	<section class="pt-24 pb-20 px-6">
		<div class="text-center max-w-4xl mx-auto">
			<h1
				class="text-6xl md:text-8xl font-light mb-8 leading-tight text-gray-900"
			>
				<span class="font-bold text-gray-900">Shyam Ajudia</span>
			</h1>
			<p
				class="text-lg text-gray-600 max-w-2xl mx-auto leading-relaxed font-light"
			>
				I design and build scalable infrastructure, create modern web applications, and help teams deliver reliable software solutions. With hands-on experience in Kubernetes, cloud platforms, and full-stack development, I focus on creating systems that are both technically sound and user-friendly.
			</p>
		</div>
	</section>

	<!-- Projects Section -->
	<section id="projects" class="px-6 pb-20">
		<div class="max-w-7xl mx-auto">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
				{
					projects.map((project) => (
						<ProjectCard
							title={project.title}
							image={project.image}
							link={project.link}
							description={project.description}
							technologies={project.technologies}
						/>
					))
				}
			</div>
		</div>
	</section>

	<!-- Footer -->
	<footer class="px-6 py-12 border-t border-amber-200">
		<div class="max-w-4xl mx-auto text-center">
			<p class="text-gray-600 mb-4">Â© 2025 Shyam Ajudia.</p>
			<div class="flex justify-center gap-6 text-sm">
				<a
					href="mailto:sajudia@proton.me"
					class="text-gray-600 hover:text-gray-900 transition-colors font-medium"
				>
					Contact
				</a>
				<a
					href="https://github.com/yamshy"
					target="_blank"
					rel="noopener noreferrer"
					class="text-gray-600 hover:text-gray-900 transition-colors font-medium"
				>
					GitHub
				</a>
			</div>
		</div>
	</footer>
</Layout>
