---
import BaseLayout from '../layouts/BaseLayout.astro';
import SidebarNav from '../components/navigation/SidebarNav.astro';
import MobileNav from '../components/navigation/MobileNav.astro';
import BentoGrid from '../components/content/grids/BentoGrid.astro';
import ProjectCard from '../components/content/grids/ProjectCard.astro';
import Timeline from '../components/content/timeline/Timeline.astro';
import ContactForm from '../components/content/forms/ContactForm.astro';
import OrganicShapes from '../components/effects/organic/OrganicShapes.astro';
import GlassmorphicContainer from '../components/ui/containers/GlassmorphicContainer.astro';

// Sample project data
const projects = [
  {
    title: 'BioML Pipeline',
    description:
      'Machine learning pipeline for analyzing genomic data with real-time visualization and statistical modeling.',
    href: '#',
    variant: 'featured',
    tags: ['Python', 'ML', 'Genomics', 'React'],
    image: '/src/assets/background.svg',
  },
  {
    title: 'Evolution Simulator',
    description:
      'Interactive web application simulating evolutionary processes with customizable parameters and visual feedback.',
    href: '#',
    variant: 'standard',
    tags: ['JavaScript', 'D3.js', 'Biology', 'Simulation'],
  },
  {
    title: 'Research Dashboard',
    description:
      'Data visualization dashboard for tracking research metrics and collaboration patterns across institutions.',
    href: '#',
    variant: 'standard',
    tags: ['Vue.js', 'D3.js', 'Analytics', 'Research'],
  },
  {
    title: 'Gene Expression Tool',
    description:
      'Web-based tool for analyzing and visualizing gene expression data with statistical significance testing.',
    href: '#',
    variant: 'secondary',
    tags: ['R', 'Shiny', 'Bioinformatics', 'Statistics'],
  },
  {
    title: 'Collaboration Platform',
    description:
      'Cross-institutional platform for sharing research data and fostering scientific collaboration.',
    href: '#',
    variant: 'wide',
    tags: ['Node.js', 'MongoDB', 'Collaboration', 'Research'],
  },
  {
    title: 'Data Visualization Library',
    description:
      'Reusable React components for creating interactive biological data visualizations.',
    href: '#',
    variant: 'secondary',
    tags: ['React', 'TypeScript', 'Visualization', 'Library'],
  },
];
---

<BaseLayout title="yamshy - Biology-Inspired Portfolio">
  <OrganicShapes />
  <SidebarNav />
  <MobileNav />

  <main>
    <!-- Hero Section with Asymmetrical Layout -->
    <section class="hero" id="about">
      <GlassmorphicContainer
        variant="clear"
        size="large"
        class="hero-container u-container u-container--xl"
      >
        <!-- Asymmetrical grid layout -->
        <div class="hero-grid">
          <!-- Left side - 2/3 width for main content -->
          <div class="hero-main">
            <!-- Main heading with asymmetrical positioning -->
            <div class="hero-title-container">
              <h1 class="hero-title">
                <span class="hero-name-primary">Shyam</span>
                <span class="hero-name-secondary">Ajudia</span>
              </h1>
            </div>

            <!-- Bio text positioned asymmetrically -->
            <div class="hero-bio">
              <p class="hero-bio-primary">
                Infrastructure Engineer specializing in
                <span class="highlight-text"
                  >DevOps, system administration,</span
                >
                and <span class="highlight-text">data engineering</span>
              </p>
              <p class="hero-bio-secondary">
                Starting in molecular biology research, the transition to
                infrastructure engineering came naturally through understanding
                how biological systems work - complex, interconnected, and
                self-regulating. This systems thinking translates directly to
                building reliable infrastructure and data pipelines.
              </p>
            </div>
          </div>

          <!-- Right side - 1/3 width for CTAs -->
          <div class="hero-actions-container">
            <!-- Glassmorphism CTA container -->
            <div class="hero-cta-wrapper">
              <!-- Primary CTA with glassmorphism -->
              <a href="#work" class="cta-primary">
                Learn More
                <span class="cta-arrow">↓</span>
              </a>

              <!-- Secondary CTA with glassmorphism -->
              <a href="mailto:sajudia@proton.me" class="cta-secondary">
                Get In Touch
                <span class="cta-arrow">→</span>
              </a>
            </div>
          </div>
        </div>

        <!-- Scroll indicator -->
        <div class="scroll-indicator">
          <div class="scroll-mouse">
            <div class="scroll-dot"></div>
          </div>
        </div>
      </GlassmorphicContainer>
    </section>

    <!-- Featured Work -->
    <section id="work" class="work-section">
      <GlassmorphicContainer
        variant="clear"
        size="medium"
        class="work-container u-container u-container--xl"
      >
        <div class="work-content">
          <h2 class="section-title">Featured Work</h2>
          <BentoGrid>
            {projects.map((project) => <ProjectCard {...project} />)}
          </BentoGrid>
        </div>
      </GlassmorphicContainer>
    </section>

    <!-- Professional Evolution Timeline -->
    <section id="evolution" class="timeline-section">
      <GlassmorphicContainer
        variant="clear"
        size="medium"
        class="timeline-container u-container u-container--xl"
      >
        <Timeline />
      </GlassmorphicContainer>
    </section>

    <!-- Contact Section -->
    <section class="contact" id="contact">
      <GlassmorphicContainer
        variant="clear"
        size="medium"
        tag="div"
        class="contact-content"
      >
        <h2 class="section-title">Let's Connect</h2>
        <p class="contact-description">
          Interested in collaborating on projects that bridge biology and
          technology? I'm always excited to discuss new opportunities and
          innovative ideas.
        </p>
        <ContactForm />
      </GlassmorphicContainer>
    </section>
  </main>
</BaseLayout>

<style>
  main {
    position: relative;
    z-index: var(--z-fg);
  }

  .hero {
    min-height: 100vh;
    position: relative;
    overflow: hidden;
    padding: var(--sp-8) var(--sp-8) var(--sp-12) var(--sp-8);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* Additional spacing handled via global override below */
  }

  /* Increase inner spacing of the glass wrapper for hero */
  .hero :global(.glassmorphic-container) {
    padding-inline: clamp(var(--sp-16), 8vw, var(--sp-24));
    padding-block: clamp(var(--sp-12), 6vw, var(--sp-16));
    padding-bottom: clamp(var(--sp-14), 8vw, var(--sp-20));
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--sp-8);
    width: 100%;
    margin: 0;
    position: relative;
    z-index: var(--z-fg);
  }

  @media (min-width: 1024px) {
    .hero-grid {
      grid-template-columns: 2fr 1fr;
      column-gap: var(--sp-20);
      row-gap: var(--sp-12);
    }
  }

  @media (min-width: 1280px) {
    .hero-grid {
      column-gap: var(--sp-24);
    }
  }

  .hero-main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
    z-index: var(--z-fg);
    width: 100%;
  }

  .hero-title-container {
    margin-bottom: var(--sp-12);
    animation: fade-in-up 1s var(--ease-3) 0.2s both;
  }

  @media (min-width: 1024px) {
    .hero-title-container {
      margin-bottom: var(--sp-16);
    }
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 300;
    line-height: 0.8;
    margin: 0;
  }

  @media (min-width: 640px) {
    .hero-title {
      font-size: clamp(4rem, 10vw, 7rem);
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: clamp(5rem, 12vw, 8rem);
    }
  }

  @media (min-width: 1280px) {
    .hero-title {
      font-size: clamp(6rem, 14vw, 9rem);
    }
  }

  .hero-name-primary {
    display: block;
    color: var(--coral);
    font-weight: 700;
    padding-bottom: var(--sp-4);
  }

  .hero-name-secondary {
    display: block;
    color: var(--text-dark);
    font-weight: 300;
    margin-left: var(--sp-6);
    margin-top: var(--sp-2);
    padding-bottom: var(--sp-6);
  }

  @media (min-width: 1024px) {
    .hero-name-secondary {
      margin-left: var(--sp-12);
      margin-top: var(--sp-3);
      padding-bottom: var(--sp-8);
    }
  }

  .hero-bio {
    max-width: 600px;
    margin-left: 0;
    animation: fade-in-up 1s var(--ease-3) 0.4s both;
  }

  @media (min-width: 1024px) {
    .hero-bio {
      margin-left: var(--sp-8);
      max-width: 700px;
    }
  }

  .hero-bio-primary {
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    line-height: 1.6;
    color: var(--text-dark);
    margin: 0 0 var(--sp-6) 0;
    font-weight: 300;
  }

  @media (min-width: 1024px) {
    .hero-bio-primary {
      font-size: clamp(1.3rem, 3.5vw, 1.6rem);
    }
  }

  .hero-bio-secondary {
    font-size: clamp(1rem, 2.5vw, 1.1rem);
    line-height: 1.7;
    color: color-mix(in oklab, var(--text-dark), transparent 25%);
    margin: 0;
  }

  .highlight-text {
    color: var(--coral);
    font-weight: 500;
  }

  .hero-actions-container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
    width: fit-content;
    max-width: 100%;
  }

  @media (min-width: 1024px) {
    .hero-actions-container {
      align-items: flex-start;
    }
  }

  .hero-cta-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--sp-6);
    width: 100%;
    max-width: 320px;
    animation: fade-in-up 1s var(--ease-3) 0.6s both;
  }

  .cta-primary,
  .cta-secondary {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--sp-2);
    padding: var(--sp-4) var(--sp-6);
    border-radius: 50px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s var(--ease-3);
    backdrop-filter: blur(var(--blur-12));
    border: 1px solid;
    position: relative;
    overflow: hidden;
  }

  .cta-primary {
    background: var(--glass-yellow);
    border-color: color-mix(in oklab, var(--accent-yellow), transparent 70%);
    color: var(--text-dark);
  }

  .cta-primary:hover {
    background: var(--accent-yellow);
    box-shadow: var(--shadow-xl);
    transform: scale(1.05);
  }

  .cta-secondary {
    background: var(--glass-mocha);
    border-color: color-mix(in oklab, var(--mocha), transparent 70%);
    color: var(--text-dark);
  }

  .cta-secondary:hover {
    background: var(--mocha);
    color: var(--warm-bg);
    box-shadow: var(--shadow-xl);
    transform: scale(1.05);
  }

  .cta-arrow {
    transition: transform 0.3s var(--ease-3);
  }

  .cta-primary:hover .cta-arrow {
    transform: translateY(4px);
  }

  .cta-secondary:hover .cta-arrow {
    transform: translateX(4px);
  }

  /* Removed hero-specific floating accent blob to keep only global blobs */

  .scroll-indicator {
    position: absolute;
    bottom: var(--sp-6);
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s var(--ease-in-out-3) infinite;
  }

  .scroll-mouse {
    width: 24px;
    height: 40px;
    border: 2px solid var(--coral);
    border-radius: 12px;
    display: flex;
    justify-content: center;
    padding-top: 8px;
  }

  .scroll-dot {
    width: 4px;
    height: 12px;
    background: var(--coral);
    border-radius: 2px;
    animation: pulse 2s var(--ease-in-out-3) infinite;
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes organic-float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
    }
  }

  @keyframes bounce {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateX(-50%) translateY(0);
    }
    40% {
      transform: translateX(-50%) translateY(-10px);
    }
    60% {
      transform: translateX(-50%) translateY(-5px);
    }
  }

  /* Mobile-friendly vertical-only bounce for static positioning */
  @keyframes bounce-y {
    0%,
    20%,
    50%,
    80%,
    100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.3;
    }
  }

  .work-section {
    padding: var(--sp-16) var(--sp-6);
    display: flex;
    justify-content: center;
  }

  :global(.work-container) {
    width: 100%;
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: var(--size-6) !important;
    overflow: visible;
  }

  .work-content {
    width: 100%;
    max-width: none;
    margin: 0 auto;
  }

  .work-content :global(.bento) {
    max-width: 1240px;
    width: 100%;
    margin: 0 auto;
    padding: 0;
  }

  .work-content :global(.bento .grid) {
    width: 100%;
  }

  /* No special gutter needed at this width; centered container avoids overlap */

  .contact {
    padding: var(--sp-8) var(--sp-6);
    text-align: center;
    margin-top: var(--sp-8);
    display: flex;
    justify-content: center;
  }

  .contact-content {
    width: 100%;
    max-width: var(--container-sm);
    display: flex;
    flex-direction: column;
    gap: var(--sp-6);
    text-align: center;
    padding: var(--size-6) !important;
  }

  /* Timeline wrapper sizing */
  .timeline-section {
    padding: var(--sp-16) var(--sp-6);
    display: flex;
    justify-content: center;
  }

  :global(.timeline-container) {
    width: 100%;
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: var(--size-6) var(--size-4) !important;
    overflow: visible; /* allow inner timeline visuals to extend without clipping */
  }

  /* Give the rightmost timeline card room and avoid clipping from component overflow */
  :global(.timeline) {
    padding-inline-end: var(--sp-6) !important;
    overflow: visible !important;
  }

  .section-title {
    font-size: var(--font-size-fluid-2);
    font-weight: var(--font-weight-7);
    line-height: var(--font-lineheight-1);
    margin: 0 0 var(--size-8) 0;
    color: var(--text-dark);
    text-align: center;
  }

  .contact-description {
    font-size: 1.1rem;
    line-height: 1.7;
    letter-spacing: 0.01em;
    color: color-mix(in oklab, var(--text-dark), transparent 15%);
    margin: 0;
  }

  .contact-actions {
    display: flex;
    gap: var(--sp-4);
    flex-wrap: wrap;
    justify-content: center;
  }

  @media (prefers-reduced-motion: reduce) {
    .hero-content {
      animation: none;
    }

    .highlight::after {
      animation: none;
      transform: scaleX(1);
    }
  }

  /* Add breathing room on desktop so content doesn't overlap the fixed sidebar */
  @media (min-width: 1024px) {
    .hero {
      padding-left: calc(var(--sp-8) + 10rem);
    }

    .work-section {
      padding-left: calc(var(--sp-16) + 10rem);
    }

    .timeline-section {
      padding-left: calc(var(--sp-16) + 10rem);
    }
  }

  @media (max-width: 767px) {
    .hero {
      padding: var(--sp-6) var(--sp-6) var(--sp-8) var(--sp-6);
      min-height: 100vh;
    }

    .hero-main {
      justify-content: center;
    }

    .hero-actions-container {
      justify-content: center;
    }

    .hero-grid {
      gap: var(--sp-6);
    }

    .hero-bio {
      margin-left: 0;
      max-width: 100%;
    }

    .hero-bio-primary {
      margin-bottom: var(--sp-4);
    }

    .hero-name-secondary {
      margin-left: var(--sp-3);
      margin-top: var(--sp-1);
    }

    .hero-actions-container {
      align-items: center;
    }

    .hero-cta-wrapper {
      gap: var(--sp-4);
    }

    /* Mobile: move scroll indicator below CTAs and center it */
    .scroll-indicator {
      position: static;
      left: auto;
      bottom: auto;
      transform: none;
      margin: var(--sp-6) auto 0 auto; /* breathing room below CTA stack */
      animation-name: bounce-y; /* vertical-only bounce for static positioning */
    }

    /* Slightly smaller, subtler indicator on mobile */
    .scroll-mouse {
      width: 20px;
      height: 34px;
      border-radius: 10px;
      padding-top: 6px;
    }

    .scroll-dot {
      height: 10px;
    }

    .contact-actions {
      flex-direction: column;
      align-items: center;
    }

    .contact {
      padding: var(--sp-6) var(--sp-4);
    }
  }

  /* Hide scroll indicator on very tight vertical spaces on mobile */
  @media (max-width: 767px) and (max-height: 600px) {
    .scroll-indicator {
      display: none;
    }
  }
</style>
