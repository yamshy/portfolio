---
import Layout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import ContactForm from "../components/ContactForm.astro";
import Footer from "../components/Footer.astro";

// Portfolio data - your actual projects
const projects = [
	{
		title: "Homelab Kubernetes",
		link: "https://github.com/yamshy/homelab",
		description:
			"Personal homelab infrastructure using Kubernetes with FluxCD for GitOps deployment. Manages various services and applications with automated CI/CD pipelines.",
		technologies: ["Kubernetes", "FluxCD", "GitOps", "Docker", "Helm"],
	},
	{
		title: "Portfolio Website",
		link: "https://github.com/yamshy/portfolio",
		description:
			"Portfolio website built with Astro and Tailwind CSS.<br>(the site you're looking at)",
		technologies: ["Astro", "Tailwind CSS", "TypeScript", "Responsive Design"],
	},
];
---

<Layout>
	<!-- Hero Section with Asymmetrical Layout -->
	<section id="hero" class="h-[85vh] bg-warm-white relative overflow-hidden">
		<!-- Organic background shapes -->
		<div class="absolute inset-0 pointer-events-none">
			<!-- Large coral blob -->
			<div class="absolute top-20 -left-20 w-96 h-96 bg-glass-coral rounded-full animate-morph blur-lg opacity-70"></div>
			<!-- Medium mocha blob -->
			<div class="absolute top-1/3 right-10 w-64 h-64 bg-glass-mocha rounded-full animate-organic-float blur-md opacity-50"></div>
			<!-- Small yellow accent -->
			<div class="absolute bottom-1/4 left-1/3 w-32 h-32 bg-glass-yellow rounded-full animate-float blur-sm opacity-60"></div>
		</div>

		<!-- Asymmetrical grid layout -->
		<div class="grid grid-cols-12 min-h-screen max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<!-- Left side - 2/3 width for main content -->
			<div class="col-span-12 lg:col-span-8 flex flex-col justify-center relative z-10">
				<!-- Main heading with asymmetrical positioning -->
				<div class="mb-8 lg:mb-12">
					<h1 class="text-6xl sm:text-7xl lg:text-8xl xl:text-9xl font-light leading-tight animate-grow">
						<span class="block text-coral-primary font-bold">Shyam</span>
						<span class="block text-text-dark font-light ml-8 lg:ml-16">Ajudia</span>
					</h1>
				</div>
				
				<!-- Bio text positioned asymmetrically -->
				<div class="max-w-2xl lg:ml-16 mb-12 animate-fade-in" style="animation-delay: 0.3s;">
					<p class="text-xl lg:text-2xl text-text-dark leading-relaxed font-light mb-6">
						Software Engineer & DevOps Specialist building 
						<span class="text-coral-primary font-medium">scalable infrastructure</span> 
						and <span class="text-coral-primary font-medium">automated systems</span>
					</p>
					<p class="text-lg text-mocha-mousse leading-relaxed">
						I bring analytical precision and systems thinking to cloud architecture, 
						Kubernetes, and CI/CD pipelines. Turning complex systems into reliable, 
						maintainable solutions.
					</p>
				</div>
			</div>

			<!-- Right side - 1/3 width for CTAs and floating elements -->
			<div class="col-span-12 lg:col-span-4 flex flex-col justify-center items-end lg:items-start relative">
				<!-- Glassmorphism CTA container -->
				<div class="w-full lg:w-auto space-y-4 animate-fade-in" style="animation-delay: 0.6s;">
					<!-- Primary CTA with glassmorphism -->
					<a 
						href="#projects" 
						class="group block w-full lg:w-auto px-8 py-4 bg-glass-yellow backdrop-blur-lg border border-accent-yellow/30 rounded-full font-medium text-text-dark transition-all duration-300 hover:bg-accent-yellow hover:shadow-2xl hover:scale-105 text-center"
					>
						Learn More
						<span class="inline-block ml-2 transition-transform duration-300 group-hover:translate-y-1">↓</span>
					</a>
					
					<!-- Secondary CTA with glassmorphism -->
					<a 
						href="mailto:sajudia@proton.me" 
						class="group block w-full lg:w-auto px-8 py-4 bg-glass-mocha backdrop-blur-lg border border-mocha-mousse/30 rounded-full font-medium text-text-dark transition-all duration-300 hover:bg-mocha-mousse hover:shadow-xl hover:scale-105 text-center"
					>
						Get In Touch
						<span class="inline-block ml-2 transition-transform duration-300 group-hover:translate-x-1">→</span>
					</a>
				</div>

				<!-- Floating accent shape -->
				<div class="hidden lg:block absolute -top-20 -right-10 w-40 h-40 bg-glass-coral rounded-full animate-organic-float blur-xl opacity-30"></div>
			</div>
		</div>

		<!-- Scroll indicator -->
		<div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
			<div class="w-6 h-10 border-2 border-coral-primary rounded-full flex justify-center">
				<div class="w-1 h-3 bg-coral-primary rounded-full mt-2 animate-pulse"></div>
			</div>
		</div>
	</section>

	<!-- Professional Evolution Timeline -->
	<section id="evolution" class="py-20 bg-gradient-to-b from-warm-white to-mocha-50 relative overflow-hidden">
		<!-- Background organic shapes -->
		<div class="absolute inset-0 pointer-events-none">
			<div class="absolute top-1/4 left-1/4 w-72 h-72 bg-glass-blue rounded-full animate-morph blur-lg opacity-40"></div>
			<div class="absolute bottom-1/3 right-1/4 w-48 h-48 bg-glass-coral rounded-full animate-organic-float blur-md opacity-50"></div>
		</div>

		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
			<!-- Section header -->
			<div class="text-center mb-16 animate-fade-in">
				<h2 class="text-4xl lg:text-5xl font-light text-text-dark mb-6">
					Professional <span class="text-coral-primary font-medium">Evolution</span>
				</h2>
				<p class="text-xl text-mocha-mousse max-w-3xl mx-auto leading-relaxed">
					From laboratory precision to infrastructure automation - a journey of analytical thinking 
					and systems architecture
				</p>
			</div>

			<!-- Timeline container -->
			<div class="relative">
				<!-- Timeline path -->
				<div class="absolute left-8 lg:left-1/2 top-0 bottom-0 w-1 bg-gradient-to-b from-coral-primary via-mocha-mousse to-cool-contrast transform lg:-translate-x-1/2"></div>

				<!-- Timeline phases -->
				<div class="space-y-16">
					<!-- Phase 1: Biology -->
					<div class="relative flex items-center animate-slide-up">
						<!-- Timeline node -->
						<div class="absolute left-6 lg:left-1/2 w-4 h-4 bg-coral-primary rounded-full border-4 border-warm-white transform lg:-translate-x-1/2 z-10"></div>
						
						<!-- Content -->
						<div class="ml-16 lg:ml-0 lg:w-1/2 lg:pr-16">
							<div class="bg-glass-coral backdrop-blur-lg border border-coral-primary/20 rounded-3xl p-8 shadow-xl">
								<div class="flex items-center mb-4">
									<span class="text-sm font-medium text-coral-primary bg-coral-primary/10 px-3 py-1 rounded-full">2018-2021</span>
								</div>
								<h3 class="text-2xl font-medium text-text-dark mb-3">Education & Pure Biology</h3>
								<p class="text-mocha-mousse leading-relaxed mb-4">
									Traditional wet lab focus with manual processes, data analysis, and experimental design. 
									Developed analytical precision and systematic thinking in laboratory research.
								</p>
								<div class="flex flex-wrap gap-2">
									<span class="text-xs bg-coral-primary/20 text-coral-primary px-2 py-1 rounded-full">Research</span>
									<span class="text-xs bg-coral-primary/20 text-coral-primary px-2 py-1 rounded-full">Data Analysis</span>
									<span class="text-xs bg-coral-primary/20 text-coral-primary px-2 py-1 rounded-full">Documentation</span>
								</div>
							</div>
						</div>
					</div>

					<!-- Phase 2: Transition -->
					<div class="relative flex items-center animate-slide-up" style="animation-delay: 0.2s;">
						<div class="absolute left-6 lg:left-1/2 w-4 h-4 bg-mocha-mousse rounded-full border-4 border-warm-white transform lg:-translate-x-1/2 z-10"></div>
						
						<div class="ml-16 lg:ml-0 lg:w-1/2 lg:pl-16 lg:ml-auto">
							<div class="bg-glass-mocha backdrop-blur-lg border border-mocha-mousse/20 rounded-3xl p-8 shadow-xl">
								<div class="flex items-center mb-4">
									<span class="text-sm font-medium text-mocha-mousse bg-mocha-mousse/10 px-3 py-1 rounded-full">2021-2022</span>
								</div>
								<h3 class="text-2xl font-medium text-text-dark mb-3">Hybrid Transition</h3>
								<p class="text-mocha-mousse leading-relaxed mb-4">
									Introduction of computational thinking to biological problems. Career transition to technology 
									with software development bootcamp and first engineering role.
								</p>
								<div class="flex flex-wrap gap-2">
									<span class="text-xs bg-mocha-mousse/20 text-mocha-mousse px-2 py-1 rounded-full">Bootcamp</span>
									<span class="text-xs bg-mocha-mousse/20 text-mocha-mousse px-2 py-1 rounded-full">First Role</span>
									<span class="text-xs bg-mocha-mousse/20 text-mocha-mousse px-2 py-1 rounded-full">Learning</span>
								</div>
							</div>
						</div>
					</div>

					<!-- Phase 3: Technical Leadership -->
					<div class="relative flex items-center animate-slide-up" style="animation-delay: 0.4s;">
						<div class="absolute left-6 lg:left-1/2 w-4 h-4 bg-mocha-mousse rounded-full border-4 border-warm-white transform lg:-translate-x-1/2 z-10"></div>
						
						<div class="ml-16 lg:ml-0 lg:w-1/2 lg:pr-16">
							<div class="bg-glass-mocha backdrop-blur-lg border border-mocha-mousse/20 rounded-3xl p-8 shadow-xl">
								<div class="flex items-center mb-4">
									<span class="text-sm font-medium text-mocha-mousse bg-mocha-mousse/10 px-3 py-1 rounded-full">2022-2024</span>
								</div>
								<h3 class="text-2xl font-medium text-text-dark mb-3">Technical Leadership</h3>
								<p class="text-mocha-mousse leading-relaxed mb-4">
									Full computational infrastructure role while maintaining biology expertise. 
									DevOps engineering with focus on automation and scalable systems.
								</p>
								<div class="flex flex-wrap gap-2">
									<span class="text-xs bg-mocha-mousse/20 text-mocha-mousse px-2 py-1 rounded-full">DevOps</span>
									<span class="text-xs bg-mocha-mousse/20 text-mocha-mousse px-2 py-1 rounded-full">Infrastructure</span>
									<span class="text-xs bg-mocha-mousse/20 text-mocha-mousse px-2 py-1 rounded-full">Automation</span>
								</div>
							</div>
						</div>
					</div>

					<!-- Phase 4: Current Evolution -->
					<div class="relative flex items-center animate-slide-up" style="animation-delay: 0.6s;">
						<div class="absolute left-6 lg:left-1/2 w-6 h-6 bg-cool-contrast rounded-full border-4 border-warm-white transform lg:-translate-x-1/2 z-10 shadow-lg"></div>
						
						<div class="ml-16 lg:ml-0 lg:w-1/2 lg:pl-16 lg:ml-auto">
							<div class="bg-glass-blue backdrop-blur-lg border border-cool-contrast/20 rounded-3xl p-8 shadow-xl">
								<div class="flex items-center mb-4">
									<span class="text-sm font-medium text-cool-contrast bg-cool-contrast/10 px-3 py-1 rounded-full">2024+</span>
									<span class="ml-2 text-xs bg-accent-yellow/20 text-text-dark px-2 py-1 rounded-full font-medium">Current</span>
								</div>
								<h3 class="text-2xl font-medium text-text-dark mb-3">Cloud Architecture Specialist</h3>
								<p class="text-mocha-mousse leading-relaxed mb-4">
									DevOps and cloud architecture specialization. Building scalable infrastructure, 
									Kubernetes expertise, and CI/CD pipelines with analytical precision.
								</p>
								<div class="flex flex-wrap gap-2">
									<span class="text-xs bg-cool-contrast/20 text-cool-contrast px-2 py-1 rounded-full">Kubernetes</span>
									<span class="text-xs bg-cool-contrast/20 text-cool-contrast px-2 py-1 rounded-full">Cloud</span>
									<span class="text-xs bg-cool-contrast/20 text-cool-contrast px-2 py-1 rounded-full">CI/CD</span>
									<span class="text-xs bg-cool-contrast/20 text-cool-contrast px-2 py-1 rounded-full">Architecture</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Featured Work Section -->
	<section id="projects" class="py-20 bg-warm-white relative overflow-hidden">
		<!-- Background organic shapes -->
		<div class="absolute inset-0 pointer-events-none">
			<div class="absolute top-1/3 right-1/4 w-80 h-80 bg-glass-yellow rounded-full animate-morph blur-lg opacity-30"></div>
			<div class="absolute bottom-1/4 left-1/5 w-64 h-64 bg-glass-coral rounded-full animate-organic-float blur-md opacity-40"></div>
		</div>

		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
			<!-- Section header -->
			<div class="text-center mb-16 animate-fade-in">
				<h2 class="text-4xl lg:text-5xl font-light text-text-dark mb-6">
					Featured <span class="text-coral-primary font-medium">Work</span>
				</h2>
				<p class="text-xl text-mocha-mousse max-w-3xl mx-auto leading-relaxed">
					Infrastructure projects and technical solutions built with precision and scalability in mind
				</p>
			</div>
			
			<!-- Asymmetrical Bento Grid Layout -->
			<div class="grid grid-cols-12 gap-6 lg:gap-8">
				<!-- Featured Project - Large (spans 2 columns, 1.5x height) -->
				<div class="col-span-12 lg:col-span-8 animate-grow">
					<div class="bg-glass-coral backdrop-blur-xl border border-coral-primary/20 rounded-3xl p-8 lg:p-12 shadow-2xl hover:shadow-3xl transition-all duration-500 hover:scale-[1.02] group">
						<div class="flex flex-col h-full">
							<div class="flex items-center justify-between mb-6">
								<h3 class="text-2xl lg:text-3xl font-medium text-text-dark group-hover:text-coral-primary transition-colors duration-300">
									{projects[0].title}
								</h3>
								<a 
									href={projects[0].link} 
									target="_blank" 
									rel="noopener noreferrer"
									class="w-12 h-12 bg-coral-primary/10 hover:bg-coral-primary rounded-full flex items-center justify-center transition-all duration-300 group-hover:scale-110"
								>
									<span class="text-coral-primary group-hover:text-warm-white transition-colors duration-300">→</span>
								</a>
							</div>
							<p class="text-lg text-mocha-mousse leading-relaxed mb-8 flex-grow" set:html={projects[0].description}></p>
							<div class="flex flex-wrap gap-3">
								{projects[0].technologies.map((tech) => (
									<span class="text-sm bg-coral-primary/20 text-coral-primary px-4 py-2 rounded-full font-medium">
										{tech}
									</span>
								))}
							</div>
						</div>
					</div>
				</div>

				<!-- Secondary Project - Medium (spans 1 column) -->
				<div class="col-span-12 lg:col-span-4 animate-grow" style="animation-delay: 0.2s;">
					<div class="bg-glass-mocha backdrop-blur-xl border border-mocha-mousse/20 rounded-3xl p-6 lg:p-8 shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-[1.02] group h-full">
						<div class="flex flex-col h-full">
							<div class="flex items-center justify-between mb-4">
								<h3 class="text-xl lg:text-2xl font-medium text-text-dark group-hover:text-mocha-mousse transition-colors duration-300">
									{projects[1].title}
								</h3>
								<a 
									href={projects[1].link} 
									target="_blank" 
									rel="noopener noreferrer"
									class="w-10 h-10 bg-mocha-mousse/10 hover:bg-mocha-mousse rounded-full flex items-center justify-center transition-all duration-300 group-hover:scale-110"
								>
									<span class="text-mocha-mousse group-hover:text-warm-white transition-colors duration-300">→</span>
								</a>
							</div>
							<p class="text-mocha-mousse leading-relaxed mb-6 flex-grow" set:html={projects[1].description}></p>
							<div class="flex flex-wrap gap-2">
								{projects[1].technologies.map((tech) => (
									<span class="text-xs bg-mocha-mousse/20 text-mocha-mousse px-3 py-1 rounded-full font-medium">
										{tech}
									</span>
								))}
							</div>
						</div>
					</div>
				</div>

				<!-- Additional space for future projects or organic shapes -->
				<div class="col-span-12 lg:col-span-4 lg:col-start-9 animate-fade-in" style="animation-delay: 0.4s;">
					<div class="bg-glass-blue backdrop-blur-lg border border-cool-contrast/20 rounded-3xl p-8 shadow-lg h-full flex items-center justify-center">
						<div class="text-center">
							<div class="w-16 h-16 bg-cool-contrast/10 rounded-full flex items-center justify-center mx-auto mb-4">
								<span class="text-2xl text-cool-contrast">+</span>
							</div>
							<p class="text-mocha-mousse font-medium">More projects coming soon</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Contact Form -->
	<ContactForm />

	<!-- Footer -->
	<Footer />
</Layout>
