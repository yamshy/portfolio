---
import GlassCard from "./GlassCard.astro";
import FormInput from "./FormInput.astro";

// Contact form component
---

<section id="contact">
	<div>
		<!-- Section header -->
		<div>
			<h2>Get In Touch</h2>
			<p>
				Ready to collaborate on your next project? Let's discuss how we can build something amazing together.
			</p>
		</div>

		<!-- Contact form -->
		<div>
			<GlassCard>
				<form>
					<FormInput
						type="text"
						name="name"
						label="Name"
						placeholder="Your name"
						required={true}
					/>

					<FormInput
						type="email"
						name="email"
						label="Email"
						placeholder="you@example.com"
						required={true}
					/>

					<FormInput
						type="text"
						name="subject"
						label="Subject"
						placeholder="What's this about?"
						required={true}
					/>

					<FormInput
						type="textarea"
						name="message"
						label="Message"
						placeholder="Tell me about your project, ideas, or just say hello..."
						rows={5}
						required={true}
					/>

					<button type="submit">
						Send Message â†’
					</button>
				</form>

				<!-- Success/Error messages -->
				<div>
					<div>
						<h3>Message sent successfully!</h3>
						<p>I'll get back to you soon.</p>
					</div>
				</div>

				<div>
					<div>
						<h3>Something went wrong</h3>
						<p>Please try again or email me directly.</p>
					</div>
				</div>
			</GlassCard>

			<!-- Direct contact info -->
			<div>
				<p>Or reach out directly:</p>
				<div>
					<a href="mailto:sajudia@proton.me">sajudia@proton.me</a>
					<a href="https://github.com/yamshy" target="_blank" rel="noopener noreferrer">
						GitHub
					</a>
				</div>
			</div>
		</div>
	</div>
</section>