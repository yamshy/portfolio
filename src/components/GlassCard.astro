---
import type { GlassCardVariant, GlassCardSize } from '../types/index';

export interface Props {
  variant?: GlassCardVariant;
  size?: GlassCardSize;
  class?: string;
  hover?: boolean;
}

const { 
  variant = 'mocha', 
  size = 'md', 
  class: className = '',
  hover = true
} = Astro.props;

const variantClasses = {
  coral: 'bg-glass-coral border-coral-primary/20',
  mocha: 'bg-glass-mocha border-mocha-mousse/20',
  blue: 'bg-glass-blue border-cool-contrast/20',
  yellow: 'bg-glass-yellow border-accent-yellow/20'
};

const sizeClasses = {
  sm: 'p-4 lg:p-6',
  md: 'p-6 lg:p-8',
  lg: 'p-8 lg:p-12'
};

const hoverClasses = hover 
  ? 'transition-all duration-500 hover:scale-[1.02] hover:shadow-2xl' 
  : '';
---

<div class={`
  backdrop-blur-xl 
  border 
  rounded-3xl 
  shadow-xl 
  ${variantClasses[variant]} 
  ${sizeClasses[size]} 
  ${hoverClasses}
  ${className}
`}>
  <slot />
</div>
