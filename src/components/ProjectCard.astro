---
export interface Props {
    title: string;
    image: string;
    link: string;
    description?: string;
    technologies?: string[];
}

const { title, image, link, description, technologies } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="group block">
    <div
        class="aspect-[4/3] bg-orange-50 mb-4 overflow-hidden relative rounded-lg border border-orange-200 shadow-sm hover:shadow-md transition-shadow duration-300"
    >
        <div
            class="w-full h-full bg-gradient-to-br from-orange-100 to-orange-50 flex items-center justify-center text-orange-600"
        >
            <div class="text-center">
                <div class="text-lg font-medium mb-2 text-gray-800">
                    {title}
                </div>
                <div class="text-sm">Project Image</div>
            </div>
        </div>

        <!-- Hover Overlay -->
        <div
            class="absolute inset-0 bg-white/95 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center"
        >
            <div class="text-center text-gray-800 px-6">
                <h3 class="text-xl font-semibold mb-3 text-gray-900">
                    {title}
                </h3>
                {
                    description && (
                        <p class="text-gray-600 text-sm mb-4 leading-relaxed" set:html={description} />
                    )
                }
                {
                    technologies && technologies.length > 0 && (
                        <div class="flex flex-wrap justify-center gap-2">
                            {technologies.map((tech) => (
                                <span class="px-2 py-1 bg-blue-100 text-blue-700 text-xs rounded-full border border-blue-200">
                                    {tech}
                                </span>
                            ))}
                        </div>
                    )
                }
                <div class="mt-4 text-blue-600 text-sm font-medium">
                    View Project â†’
                </div>
            </div>
        </div>
    </div>
</a>
