---
export interface Props {
    title: string;
    image: string;
    link: string;
    description?: string;
    technologies?: string[];
}

const { title, image, link, description, technologies } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" class="group block">
    <div
        class="aspect-[4/3] bg-slate-800 mb-4 overflow-hidden relative rounded-lg border border-slate-700"
    >
        <div
            class="w-full h-full bg-gradient-to-br from-slate-700 to-slate-800 flex items-center justify-center text-slate-400"
        >
            <div class="text-center">
                <div class="text-lg font-medium mb-2 text-slate-200">
                    {title}
                </div>
                <div class="text-sm">Project Image</div>
            </div>
        </div>

        <!-- Hover Overlay -->
        <div
            class="absolute inset-0 bg-slate-900/95 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center"
        >
            <div class="text-center text-slate-200 px-6">
                <h3 class="text-xl font-semibold mb-3 text-white">
                    {title}
                </h3>
                {
                    description && (
                        <p class="text-slate-300 text-sm mb-4 leading-relaxed">
                            {description}
                        </p>
                    )
                }
                {
                    technologies && technologies.length > 0 && (
                        <div class="flex flex-wrap justify-center gap-2">
                            {technologies.map((tech) => (
                                <span class="px-2 py-1 bg-blue-500/20 text-blue-300 text-xs rounded-full border border-blue-500/30">
                                    {tech}
                                </span>
                            ))}
                        </div>
                    )
                }
                <div class="mt-4 text-blue-400 text-sm font-medium">
                    View Project â†’
                </div>
            </div>
        </div>
    </div>
</a>
