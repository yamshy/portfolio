      height: 200px;
      opacity: 0.12;
    }
    .b8 {
      top: 26%;
      left: 50%;
      width: 48px;
      height: 48px;
      opacity: 0.12;
    }
    .b9 {
      top: 24%;
      left: 30%;
      width: 200px;
      height: 140px;
      opacity: 0.14;
    }
    .b10 {
      bottom: 24%;
      right: 30%;
      width: 32px;
      height: 32px;
      opacity: 0.12;
    }
    .b11 {
      top: 34%;
      left: 20%;
      width: 22px;
      height: 22px;
      opacity: 0.12;
    }
    .b12 {
      top: 40%;
      left: 54%;
      width: 28px;
      height: 28px;
      opacity: 0.12;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .blob {
      animation: none;
    }
  }
</style>
