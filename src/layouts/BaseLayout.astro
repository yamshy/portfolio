---
import "../styles/global.css";
import SidebarNav from "../components/SidebarNav.astro";
import MobileNav from "../components/MobileNav.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio | Shyam Ajudia</title>
		<!-- Preload the main font for better performance -->
		<link
			rel="preload"
			href="/fonts/rst-thermal/rst-thermal-regular.otf"
			as="font"
			type="font/otf"
			crossorigin
		/>
		<meta
			name="description"
			content="Shyam Ajudia - Software Engineer & Developer Portfolio showcasing modern web development projects and expertise."
		/>
		<meta name="theme-color" content="#a47864" />
	</head>
	<body
		class="bg-warm-white text-text-dark transition-colors duration-300 min-h-screen"
	>
		<!-- Global background shapes - positioned relative to viewport -->
		<div class="fixed inset-0 pointer-events-none z-10" aria-hidden="true">
			<!-- Large coral blob -->
			<div
				class="absolute top-20 -left-20 w-96 h-96 bg-glass-coral rounded-full animate-morph blur-lg opacity-70 will-change-transform"
			>
			</div>
			<!-- Medium mocha blob -->
			<div
				class="absolute top-1/3 right-10 w-64 h-64 bg-glass-mocha rounded-full animate-organic-float blur-md opacity-50 will-change-transform"
			>
			</div>
			<!-- Small yellow accent -->
			<div
				class="absolute bottom-1/4 left-1/3 w-32 h-32 bg-glass-yellow rounded-full animate-float blur-sm opacity-60 will-change-transform"
			>
			</div>
			<!-- Additional shapes for variety -->
			<div
				class="absolute top-1/2 right-1/4 w-48 h-48 bg-glass-blue rounded-full animate-morph blur-md opacity-30 will-change-transform"
			>
			</div>
			<div
				class="absolute bottom-1/3 left-1/4 w-40 h-40 bg-glass-coral rounded-full animate-organic-float blur-lg opacity-40 will-change-transform"
			>
			</div>
		</div>

		<!-- Skip link for keyboard navigation -->
		<a href="#main-content" class="skip-link">Skip to main content</a>

		<MobileNav />
		<SidebarNav />
		<main id="main-content" role="main" class="lg:ml-48 relative z-20">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	/* Enhanced scrollbar styling */
	::-webkit-scrollbar {
		width: 8px;
	}

	::-webkit-scrollbar-track {
		background: var(--color-warm-white);
	}

	::-webkit-scrollbar-thumb {
		background: var(--color-mocha-mousse);
		border-radius: 4px;
	}

	::-webkit-scrollbar-thumb:hover {
		background: var(--color-coral-primary);
	}

	/* Skip link for accessibility */
	.skip-link {
		position: absolute;
		top: -40px;
		left: 6px;
		background: var(--color-coral-primary);
		color: var(--color-warm-white);
		padding: 8px;
		text-decoration: none;
		border-radius: 4px;
		z-index: 1000;
		transition: top 0.3s;
	}

	.skip-link:focus {
		top: 6px;
	}
</style>
