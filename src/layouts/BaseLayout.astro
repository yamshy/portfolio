---
import "../styles/global.css";
import SidebarNav from "../components/SidebarNav.astro";
import MobileNav from "../components/MobileNav.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio | Shyam Ajudia</title>
		<!-- Preload the main font for better performance -->
		<link
			rel="preload"
			href="/fonts/rst-thermal/rst-thermal-regular.otf"
			as="font"
			type="font/otf"
			crossorigin
		/>
		<meta
			name="description"
			content="Shyam Ajudia - Software Engineer & Developer Portfolio showcasing modern web development projects and expertise."
		/>
		<meta name="theme-color" content="#a47864" />
	</head>
	<body class="portfolio-body">
		<!-- Global background shapes - positioned relative to viewport -->
		<div class="background-shapes" aria-hidden="true">
			<!-- Large coral blob -->
			<div class="bg-shape bg-shape--coral-large"></div>
			
			<!-- Medium mocha blob -->
			<div class="bg-shape bg-shape--mocha-medium"></div>
			
			<!-- Small yellow accent -->
			<div class="bg-shape bg-shape--yellow-small"></div>
			
			<!-- Additional shapes for variety -->
			<div class="bg-shape bg-shape--blue-medium"></div>
			<div class="bg-shape bg-shape--coral-small"></div>
		</div>

		<!-- Skip link for keyboard navigation -->
		<a href="#main-content" class="skip-link">Skip to main content</a>

		<MobileNav />
		<SidebarNav />
		<main id="main-content" role="main" class="main-content">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	.portfolio-body {
		background: var(--brand-warm-white);
		color: var(--brand-text-dark);
		transition: colors var(--animation-duration-normal);
		min-height: 100vh;
	}

	.background-shapes {
		position: fixed;
		inset: 0;
		pointer-events: none;
		z-index: 10;
	}

	.bg-shape {
		position: absolute;
		border-radius: 50%;
		will-change: transform;
	}

	.bg-shape--coral-large {
		top: var(--size-12);
		left: calc(-1 * var(--size-12));
		width: 24rem;
		height: 24rem;
		background: var(--brand-glass-coral);
		animation: morph 8s var(--ease-in-out-3) infinite;
		filter: blur(var(--size-4));
		opacity: 0.7;
	}

	.bg-shape--mocha-medium {
		top: 33.333333%;
		right: var(--size-6);
		width: 16rem;
		height: 16rem;
		background: var(--brand-glass-mocha);
		animation: organicFloat 4s var(--ease-in-out-3) infinite;
		filter: blur(var(--size-3));
		opacity: 0.5;
	}

	.bg-shape--yellow-small {
		bottom: 25%;
		left: 33.333333%;
		width: 8rem;
		height: 8rem;
		background: var(--brand-glass-yellow);
		animation: float 3s var(--ease-in-out-2) infinite;
		filter: blur(var(--size-2));
		opacity: 0.6;
	}

	.bg-shape--blue-medium {
		top: 50%;
		right: 25%;
		width: 12rem;
		height: 12rem;
		background: var(--brand-glass-blue);
		animation: morph 8s var(--ease-in-out-3) infinite;
		filter: blur(var(--size-3));
		opacity: 0.3;
	}

	.bg-shape--coral-small {
		bottom: 33.333333%;
		left: 25%;
		width: 10rem;
		height: 10rem;
		background: var(--brand-glass-coral);
		animation: organicFloat 4s var(--ease-in-out-3) infinite;
		filter: blur(var(--size-4));
		opacity: 0.4;
	}

	.main-content {
		position: relative;
		z-index: 20;
	}

	/* Main content responsive spacing */
	@media (min-width: 1024px) {
		.main-content {
			margin-left: 12rem; /* 192px equivalent to lg:ml-48 */
		}
	}

	/* Enhanced scrollbar styling */
	::-webkit-scrollbar {
		width: 8px;
	}

	::-webkit-scrollbar-track {
		background: var(--brand-warm-white);
	}

	::-webkit-scrollbar-thumb {
		background: var(--brand-mocha-mousse);
		border-radius: var(--radius-2);
	}

	::-webkit-scrollbar-thumb:hover {
		background: var(--brand-coral-primary);
	}

	/* Skip link for accessibility */
	.skip-link {
		position: absolute;
		top: calc(-1 * var(--size-8));
		left: var(--size-2);
		background: var(--brand-coral-primary);
		color: var(--brand-warm-white);
		padding: var(--size-2);
		text-decoration: none;
		border-radius: var(--radius-2);
		z-index: 1000;
		transition: top var(--animation-duration-normal);
	}

	.skip-link:focus {
		top: var(--size-2);
	}
</style>