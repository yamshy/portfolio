---
import "../styles/global.css";
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio | Shyam Ajudia</title>
		<!-- Preload the main font for better performance -->
		<link rel="preload" href="/fonts/rst-thermal/rst-thermal-regular.otf" as="font" type="font/otf" crossorigin>
	</head>
	<body class="bg-amber-50 text-gray-900 transition-colors duration-300">
		<Header />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
