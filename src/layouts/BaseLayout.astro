---
import "../styles/global.css";
import SidebarNav from "../components/SidebarNav.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portfolio | Shyam Ajudia</title>
		<!-- Preload the main font for better performance -->
		<link rel="preload" href="/fonts/rst-thermal/rst-thermal-regular.otf" as="font" type="font/otf" crossorigin>
		<meta name="description" content="Shyam Ajudia - Software Engineer & Developer Portfolio showcasing modern web development projects and expertise.">
		<meta name="theme-color" content="#a47864">
	</head>
	<body class="bg-warm-white text-text-dark transition-colors duration-300 min-h-screen">
		<!-- Skip link for keyboard navigation -->
		<a href="#main-content" class="skip-link">Skip to main content</a>
		
		<SidebarNav />
		<main id="main-content" role="main">
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	
	/* Enhanced scrollbar styling */
	::-webkit-scrollbar {
		width: 8px;
	}
	
	::-webkit-scrollbar-track {
		background: #FEFCF8;
	}
	
	::-webkit-scrollbar-thumb {
		background: #A47864;
		border-radius: 4px;
	}
	
	::-webkit-scrollbar-thumb:hover {
		background: #E85A2B;
	}
	
	/* Skip link for accessibility */
	.skip-link {
		position: absolute;
		top: -40px;
		left: 6px;
		background: var(--color-coral-primary);
		color: var(--color-warm-white);
		padding: 8px;
		text-decoration: none;
		border-radius: 4px;
		z-index: 1000;
		transition: top 0.3s;
	}
	
	.skip-link:focus {
		top: 6px;
	}
</style>
